<div class="">
	<h1>New Book</h1>
		<%= form_for(@book) do |f| %>
			<h4>タイトル</h4>
			<%= f.text_field :title %>
			<h4>感想</h4>
			<%= f.text_area :body %>
			<br><%= f.submit 'Create Book' %></br>
		<% end %>
</div>

<div class="">
	<h1>Books一覧</h1>
		<% @books.each do |book| %>
			<p>タイトル</p>
			<span><%= book.title %></span>
		<% end %>
</div>
